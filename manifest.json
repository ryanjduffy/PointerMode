{
  "manifest_version": 2,
  "name": "Pointer Mode",
  "description": "Simulates webOS pointer behaviors",
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["pointerMode.js"]
   }
  ],
  "permissions": [
   "activeTab"
  ]
}